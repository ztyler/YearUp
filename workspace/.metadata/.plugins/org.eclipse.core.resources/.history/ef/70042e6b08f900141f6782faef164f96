import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

import static java.lang.System.out;

public class Atom {
	int protons, neutrons, electrons, charge;
	String name, symbol;
	boolean isIon = false, isIsotope = false;
	
	Atom(int p, int n, int e) {
		protons = p;
		neutrons = n;
		electrons = e;
		charge = protons - electrons;
		if (charge != 0) {
			isIon = true;
		}
	}
	
	void setID() {
		try {
			File fileElements = new File("C:\\Sandbox\\YearUp\\workspace\\"
					+ "Elements\\src\\elements.txt");
			Scanner scanElements = new Scanner(fileElements);
			
			while(scanElements.hasNextLine()) {
				String[] line = (scanElements.nextLine()).split(" ");
				
				out.println(line[0]);
			}
		} 
		catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
}