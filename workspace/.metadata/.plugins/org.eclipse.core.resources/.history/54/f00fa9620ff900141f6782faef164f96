import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;



public class Main  {
	
	public static void main(String[] args) {
		
		String[] m_elements = loadElements();
		
	}
	
	static String[] loadElements() {
		File fileElements = new File("C:\\Sandbox\\YearUp\\workspace\\"
				+ "Elements\\src\\elements.txt");
		
		List<String[]> List = new ArrayList<String[]>();
		
		String[] returnList = null;
		
		try {
			Scanner scanElements = new Scanner(fileElements);
			
			while(scanElements.hasNextLine()) {
				String[] line = (scanElements.nextLine()).split("\t");
				List.add(line);
			}
		
			returnList = List.toArray(new String[List.size()]);
		}
		catch (FileNotFoundException error) {
			error.printStackTrace();
		}
		
		return returnList;
	}

}
