import java.io.File;
import java.util.Scanner;

import static java.lang.System.out;

public class Atom {
	int protons, neutrons, electrons, charge;
	String name, symbol;
	boolean isIon = false, isIsotope = false;
	
	Atom(int p, int n, int e) {
		protons = p;
		neutrons = n;
		electrons = e;
		charge = protons - electrons;
		if (charge != 0) {
			isIon = true;
		}
	}
	
	void setID() {
		File file = new File("C:\\Sandbox\\YearUp\\workspace\\Elements\\src\\elements.txt");
		while (file.hasNextLine()) {
			out.println(file.nextLine());
		}
	}
}