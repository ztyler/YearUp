import java.util.Scanner;
import static java.lang.System.out;

public class Main {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		out.print("Enter a word: ");
		String word = input.nextLine();
		
		isPalindrome(word);

	}
	
	static void isPalindrome(String word) {
		word.replaceAll("\\s+", "");
		
		boolean isPalindrome = true;
		for (int i = word.length() - 1, n = 0; i > word.length()/2; n++, i--) {
			if (word.charAt(i) != word.charAt(n)) {
				isPalindrome = false;
				break;
			}
		}
		
		if (isPalindrome) {
			out.printf("%s is a palindrome.\n", word);
		}
		else {
			out.printf("%s is not a palindrome.\n", word);
		}
		
	}
	
}
